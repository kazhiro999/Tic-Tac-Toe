{
  "compilerOptions": {
    "target": "es2017",
    "module": "esnext",
    "lib": ["dom", "es2017"],
    "jsx": "react-jsx",
    "strict": true,
    "strictBindCallApply": true,
    "types": ["react", "node"],
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "noUnusedLocals": true,
    "noEmitOnError": true,
    "moduleResolution": "node",
    "typeRoots": ["node_modules/@types", "src/typings"],
    "declaration": true
  },
  "include": ["src/**/*", "./jest.setup.ts"],
  "exclude": ["node_modules"]
}
